<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Chroomsoft.Top2000.Apps.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:g="clr-namespace:Chroomsoft.Top2000.Apps.Common"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Chroomsoft.Top2000.Apps"
    xmlns:res="clr-namespace:Chroomsoft.Top2000.Apps.Globalisation"
    xmlns:obp="clr-namespace:Chroomsoft.Top2000.Apps.Views.Overview.ByPosition"
    xmlns:obd="clr-namespace:Chroomsoft.Top2000.Apps.Views.Overview.ByDate"
    xmlns:search="clr-namespace:Chroomsoft.Top2000.Apps.Views.Search"
    Shell.FlyoutBehavior="{OnPlatform WinUI='Flyout', Android='Disabled'}">

    <TabBar IsVisible="{OnPlatform Android=True, WinUI=False}">
        <Tab Title="{Binding [Overview], Source={x:Static res:Translator.Instance}}">
            <Tab.Icon>
                <FontImageSource FontFamily="MaterialIcons" Glyph="{x:Static g:Symbols.Overview}" />
            </Tab.Icon>
            <ShellContent Title="{Binding [TheList], Source={x:Static res:Translator.Instance}}"
                          ContentTemplate="{DataTemplate obp:OverviewByPositionPage}" />
        </Tab>

        <Tab Title="{Binding [ViewByDate], Source={x:Static res:Translator.Instance}}">
            <Tab.Icon>
                <FontImageSource FontFamily="MaterialIcons" Glyph="{x:Static g:Symbols.Clock}" />
            </Tab.Icon>
            <ShellContent ContentTemplate="{DataTemplate obd:OverviewByDatePage}" />
        </Tab>

