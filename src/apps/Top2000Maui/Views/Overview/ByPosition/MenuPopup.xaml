<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                            xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
                xmlns:res="clr-namespace:Chroomsoft.Top2000.Apps.Globalisation"
             x:Class="Chroomsoft.Top2000.Apps.Views.Overview.ByPosition.MenuPopup">

    <Grid ColumnDefinitions="150,50" HorizontalOptions="End" VerticalOptions="End" BackgroundColor="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Text="{Binding [JumpToGroup], Source={x:Static res:Translator.Instance}}" />
        <Label Text="{Binding [SelectEdition], Source={x:Static res:Translator.Instance}}" Grid.Row="1" />
    </Grid>
</toolkit:Popup>