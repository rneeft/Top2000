<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Chroomsoft.Top2000App.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Button
                x:Name="CounterBtn"
                Text="Click me"
                Command="{Binding LoadListingsAsync}"
                HorizontalOptions="Center" />

            <ListView ItemsSource="{Binding Listings}">
            </ListView>
        </VerticalStackLayout>
    
    </ScrollView>

</ContentPage>
